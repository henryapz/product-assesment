{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks", "prettier"],
  "rules": {
    "prettier/prettier": "warn",
    "react/jsx-filename-extension": [1, {"extensions": [".js", ".jsx"]}]
  },
  "settings": {
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 2018
    }
  }
}
